= form_for(@tweet_api_account) do |f|
  - if @tweet_api_account.errors.any?
    #error_explanation
      %h2
        = pluralize(@tweet_api_account.errors.count, 'error') 
        prohibited this tweet_api_account from being saved:

      %ul
      - @tweet_api_account.errors.full_messages.each do |msg|
        %li= msg

  = f.hidden_field :twitter_id
  .field
    = f.label :screen_name
    %br
    = f.text_field :screen_name
  .field
    = f.label :consumer_key
    %br
    = f.text_field :consumer_key
  .field
    = f.label :consumer_secret
    %br
    = f.text_field :consumer_secret
  .field
    = f.label :oauth_token
    %br
    = f.text_field :oauth_token
  .field
    = f.label :oauth_token_secret
    %br
    = f.text_field :oauth_token_secret
  .actions
    = f.submit
